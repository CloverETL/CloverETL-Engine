<plugin
   id="org.jetel.hadoop"
   version="${version.full}"
   provider-name="Javlin a.s.">

	<runtime>
		<library path="lib/hadoop-core-1.0.1.jar"/>
   	</runtime> 

	<requires engine-version="${version.full}">
		<import plugin-id="org.jetel.connection"/>
	</requires>
	
	<extension point-id="component">
		<parameter id="className" value="org.jetel.hadoop.HadoopWriter"/>
		<parameter id="type" value="HADOOP_WRITER"/>
	</extension>
	
	<extension point-id="connection">
		<parameter id="type" value="HADOOP"/>
		<parameter id="className" value="org.jetel.hadoop.HadoopConnection"/>
	</extension>

</plugin>
