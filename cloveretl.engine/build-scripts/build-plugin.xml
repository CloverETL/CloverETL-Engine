					<fileset dir="${dir.src.improved}" includes="**/*.java"/>
				</fileheading>
			</then>
		</if>
	-->
	</target>
	
	<target name="copy-java-sources" depends="init">
		<copy todir="${dir.src.improved}" encoding="UTF-8">
			<fileset dir="${dir.src}" />
		</copy>
	</target>
	
  <target name="save-required-plugins-lib">
			<echo file="${required.plugins.lib.collected}" append="true">;${lib.file}
</echo>
  </target>

	<target name="save-required-plugins">
		<if>
			<available file="${basedir}/../${plugin.name}/plugin.xml" />
		<then>
			<xslt 
				style="${dir.engine}/build-scripts/required-plugins.xsl"
				in="${basedir}/../${plugin.name}/plugin.xml"
				out="${basedir}/../${plugin.name}/required-plugins.txt"
				>
				<param name="separator" expression=","/>
				<param name="dist" expression="${dir.dist.other.plugins}"/>
				<param name="home" expression="${basedir}/.."/>
			</xslt>

			<property file="${basedir}/../${plugin.name}/required-plugins.txt" prefix="${plugin.name}"/>
			<delete file="${basedir}/../${plugin.name}/required-plugins.txt" />

			<propertycopy name="property.classes" from="${plugin.name}.required.plugins.classes" />

      <echo file="${required.plugins.collected}" append="true">${property.classes}
</echo>
      
			<if>
				<available file="${basedir}/../${plugin.name}/lib" type="dir" />
			<then>
				<foreach param="lib.file" target="save-required-plugins-lib">
					<fileset dir="${basedir}/../${plugin.name}/lib" includes="*.jar" />
				</foreach>
			</then>
			</if>


			<propertycopy name="list.property" from="${plugin.name}.required.plugins.dirs" />

      <foreach list="${list.property}" param="plugin.name" target="save-required-plugins-recursive">
          <param name="echo.recursive.property" value="1" />
      </foreach>
		</then>
		</if>
  </target>

    <target name="save-required-plugins-recursive">
        <antcall target="save-required-plugins">
            <param name="plugin.name" value="${plugin.name}" />
        </antcall>
    </target>

    <target name="find-required-plugins" depends="init">
        <echo message="plugin.name ${plugin.name}" />
        <antcall target="save-required-plugins">
                <param name="plugin.name" value="${plugin.name}" />
        </antcall>

        <loadfile property="required.plugins.classes.junit"
                 srcFile="${required.plugins.collected}">
        </loadfile>
        <delete file="${required.plugins.collected}" />

        <if>
            <available file="${required.plugins.lib.collected}" />
            <then>
                <loadfile property="required.plugins.lib"
                          srcFile="${required.plugins.lib.collected}">
                </loadfile>
                <delete file="${required.plugins.lib.collected}" />

            </then>
            <else>
                <property name="required.plugins.lib" value="" />
            </else>
        </if>

        <property name="cp.compile.junit" value="${dir.engine.classes}${required.plugins.classes.junit}${required.plugins.lib}" />
      
        <xslt 
            style="${dir.engine}/build-scripts/required-plugins.xsl"
            in="${basedir}/plugin.xml"
            out="${required.plugins.file}"
        >
            <param name="separator" expression=","/>
            <param name="dist" expression="${dir.dist.other.plugins}"/>
            <param name="home" expression="${basedir}/.."/>
        </xslt>
        <property file="${required.plugins.file}"/>
        <delete file="${required.plugins.file}"/>
        
        <property name="cp.compile" value="${dir.engine.classes}${required.plugins.classes}" />

        <echo>cp.compile=${cp.compile}</echo>
        <echo>cp.compile.junit=${cp.compile.junit}</echo>
        <echo>required.plugins=${required.plugins}</echo>
    </target>
	
	<target name="compile" depends="init,improve-java-sources,find-required-plugins" description="Compile sources">
		<!-- Create directory for binaries. -->
		<mkdir dir="${dir.classes}"/>

		<echo message="Compile classes from ${dir.src.improved} with classpath ${cp.compile}"/>
		<!-- Compile sources -->
		<javac 
				debug="true" 
				destdir="${dir.classes}"
				source="${java.src.version}"
				target="${java.src.version}"  
				encoding="UTF-8"
				classpath="${cp.compile}">
			<classpath>
				<fileset refid="plugin-libs"/>
				<fileset refid="engine-libs"/>
				<fileset refid="license-libs"/>
			</classpath>
			<src path="${dir.src.improved}"/>
		</javac>

		<!-- copy resources -->
		<copy todir="${dir.classes}">
			<fileset dir="${dir.src}">
				<exclude name="**/*.java" />
				<exclude name="**/svn/**" />
			</fileset>
		</copy>

	</target>

	<target name="plugin.xml" depends="init">
		<if><equals arg1="${plugin.xml.xslt}" arg2="" trim="true"/>
			<then>
				<copy file="plugin.xml" tofile="${dir.build}/plugin.xml" encoding="UTF-8" overwrite="true"/> <!-- overver=true is required, version number may be changed-->
			</then>
			<else>
				<echo>Transforming plugin.xml - ${plugin.xml.xslt}</echo>
				<xslt 
					style="${plugin.xml.xslt}"
					in="plugin.xml"
					out="${dir.build}/plugin.xml"
					force="true"
					>
				</xslt>
			</else>
		</if>
		
		<mkdir dir="${dir.manifest}"/>
		<copy file="${dir.build}/plugin.xml" tofile="${dir.manifest}/plugin.xml" encoding="UTF-8" overwrite="true"/> <!-- overver=true is required, version number may be changed-->
		<replace file="${dir.manifest}/plugin.xml" encoding="UTF-8">
			<replacefilter token="0.0.0.devel" value="${version.full}"/>
			<replacefilter token="&lt;library path=&quot;bin/&quot;/&gt;" value="&lt;library path=&quot;${plugin.name}.jar&quot;/&gt;"/>
		</replace>
	</target>
	
	<target name="obfuscate" depends="compile,plugin.xml" if="plugin.obfuscate.run">
